<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.david.hlp.SpringBootWork.system.auth.mapper.UserMapper">

    <!-- 查询用户及其角色和权限 -->
    <select id="getUserByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT
            u.id AS user_id,
            u.name,
            u.email,
            r.id AS role_id,
            r.role_name,
            p.id AS permission_id,
            p.permission AS permission_name
        FROM user u
                 LEFT JOIN role r ON u.role_id = r.id
                 LEFT JOIN role_permission rp ON r.id = rp.role_id
                 LEFT JOIN permission p ON rp.permission_id = p.id
        WHERE u.email = #{username}
    </select>

    <!-- 用户结果映射 -->
    <resultMap id="UserResultMap" type="com.david.hlp.SpringBootWork.system.auth.entity.UserInfo">
        <!-- 映射 UserInfo 的基本字段 -->
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="avatar" column="avatar"/>
        <result property="introduction" column="introduction"/>

        <!-- 映射 Role 对象 -->
        <association property="roles" javaType="com.david.hlp.SpringBootWork.system.auth.entity.Role">
            <id property="id" column="role_id" />
            <result property="roleName" column="role_name" />

            <!-- 映射 Role 中的 List<Permission> -->
            <collection property="permissions" ofType="com.david.hlp.SpringBootWork.system.auth.entity.Permission">
                <id property="id" column="permission_id" />
                <result property="permission" column="permission_name" />
            </collection>
        </association>
    </resultMap>

</mapper>
